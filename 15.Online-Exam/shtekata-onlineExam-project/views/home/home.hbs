{{#unless user}}
<main>
    <p class="guest-message">MoneyGone? The best expense tracker tool of all
        time!<br>–êre you new here? <a
            href="/auth/register">Register</a> yourself!</p>
</main>
{{else}}
<main>
    <section class="actions">
        <form action="/auth/refill/{{user._id}}" method="POST">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" id="refill-amount" name="amount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/expenses/create">Add it now</a>
        </div>
    </section>
    <hr class="separator">
    {{#if expenses}}
    {{>expenses}}
    {{else}}
    <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/if}}
</main>
{{/unless}}
