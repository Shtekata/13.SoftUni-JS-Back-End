<main>
  <h1>Create</h1>
  <div class="form">
    <form action="/products/create" method="POST">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="{{data.name}}">
      {{#if nameMessage}}
      <p>{{nameMessage}}</p>
      {{/if}}
      <label for="name">Description</label>
      <textarea id="name" name="description">{{data.description}}</textarea>
      {{#if descriptionMessage}}
      <p>{{descriptionMessage}}</p>
      {{/if}}
      <label for="image">ImageUrl</label>
      <input type="text" id="image" name="imageUrl"
        value="{{data.imageUrl}}">
      {{#if imageMessage}}
      <p>{{imageMessage}}</p>
      {{/if}}
      <label for="difficulty">Difficulty</label>
      <select id="difficulty" name="difficultyLevel">
        <option value="1" {{#if data.one}}selected{{/if}}>1 - Very Easy</option>
        <option value="2" {{#if data.two}}selected{{/if}}>2 - Easy</option>
        <option value="3" {{#if data.three}}selected{{/if}}>3 - Medium
          (Standard 3x3)</option>
        <option value="4" {{#if data.four}}selected{{/if}}>4 - Intermediate</option>
        <option value="5" {{#if data.five}}selected{{/if}}>5 - Expert</option>
        <option value="6" {{#if data.six}}selected{{/if}}>6 - Hardcore</option>
      </select>
      {{#if difficultyMessage}}
      <p>{{difficultyMessage}}</p>
      {{/if}}
      <input type="submit" value="Create">
    </form>
  </div>
</main>