<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{x.imageUrl}}" alt="Hotel Image">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{x.name}}</h3>
            </div>
            <div>{{x.city}}</div>
            {{#if isNotOwner}}
            <p><span>Free rooms: {{x.freeRooms}}</span> </p>
            {{#if userBookedRoom}}
            <p><span class="green">You already have booked a room</span></p>
            {{else}}
            <a href="/entities/book/{{x._id}}" class="book">Book</a>
            {{/if}}
            {{else}}
            <a href="/entities/edit/{{x._id}}" class="edit">Edit</a>
            <a href="/entities/delete/{{x._id}}" class="remove">Delete</a>
            {{/if}}
        </div>
    </div>
</section>