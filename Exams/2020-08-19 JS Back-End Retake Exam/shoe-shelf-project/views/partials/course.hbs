<div class="card mb-4">
    <img class="card-img-top"
        src="{{imageUrl}}"
        alt="Card image cap" width="400">
    <div class="card-body">
        {{#if user}}
        <h4 class="card-title">{{title}}</h4>
        <div class="card-footer">
            <a href="/courses/details/{{_id}}"><button type="button" class="btn
                    btn-primary">Details</button></a>
            <small class="float-right">{{createdAt}}</small>
        </div>
        {{else}}
        <small class="float-right">Enrolled: {{enrolled}}</small>
        {{/if}}
    </div>
</div>